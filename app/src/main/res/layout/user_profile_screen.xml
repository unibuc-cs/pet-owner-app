<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ip.team13.petowner.ui.user.UserProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/padding_128"
            android:layout_height="@dimen/padding_128"
            android:layout_marginTop="@dimen/padding_32"
            android:transitionName="userImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadImageUrl="@{viewModel.imageUrl}" />

        <TextView
            android:id="@+id/profile_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_24"
            android:layout_marginEnd="@dimen/padding_8"
            android:drawableEnd="@drawable/ic_experience"
            android:drawablePadding="@dimen/padding_4"
            android:text="@{viewModel.level}"
            android:transitionName="userLevel"
            app:drawableTintRes="@{@color/colorAppOrangeBright}"
            app:layout_constraintEnd_toStartOf="@+id/profile_weekly_exp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            tools:drawableTint="@color/colorAppOrangeBright" />

        <TextView
            android:id="@+id/profile_weekly_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_8"
            android:layout_marginTop="@dimen/padding_24"
            android:drawableEnd="@drawable/ic_weekly_exp"
            android:drawablePadding="@dimen/padding_4"
            android:text="@{viewModel.weeklyExp}"
            android:transitionName="userWeeklyExp"
            app:drawableTintRes="@{@android:color/holo_red_light}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/profile_level"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            tools:drawableTint="@android:color/holo_red_light" />

        <EditText
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_32"
            android:layout_marginTop="@dimen/padding_24"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_edit"
            android:drawablePadding="@dimen/padding_8"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:text="@{viewModel.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_level" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>