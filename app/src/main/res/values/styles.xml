<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabLayoutNoCaps" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="TabLayoutNoCaps.Small">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>


    <style name="AppTheme" parent="Theme.PetOwner" />

    <style name="Text" parent="TextAppearance.AppCompat" />

    <style name="Text.Title">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Body">
        <item name="android:textColor">@color/colorTextBody</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Text.Extra">
        <item name="android:textColor">@color/colorTextExtra</item>
    </style>

    <style name="Text.Header">
        <item name="android:fontFamily">@font/architects_daughter</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="Text.Name">
        <item name="android:textSize">@dimen/text_size_24</item>
    </style>

</resources>